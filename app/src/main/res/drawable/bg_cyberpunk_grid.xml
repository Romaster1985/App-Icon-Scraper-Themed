<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    
    <!-- Fondo NEGRO CYBERPUNK (no celeste) -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#FF0A0A12"/>
        </shape>
    </item>
    
    <!-- Grid de líneas CYAN (transparente) -->
    <item>
        <shape android:shape="rectangle">
            <stroke
                android:width="0.3dp"
                android:color="#30FFFFFF"
                android:dashWidth="2dp"
                android:dashGap="2dp"/>
        </shape>
    </item>
    
    <!-- Efecto de neón en bordes -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#0000F5FF"
                android:endColor="#00000000"
                android:angle="45"
                android:type="radial"
                android:gradientRadius="70%"
                android:centerX="0.5"
                android:centerY="0.5"/>
        </shape>
    </item>
    
</layer-list>