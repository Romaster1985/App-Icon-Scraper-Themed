<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    
    <!-- Gradiente neÃ³n cian/rosa -->
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="10dp"/>
            <gradient
                android:startColor="#FF00F5FF"
                android:centerColor="#FF9D50FF"
                android:endColor="#FFFF0080"
                android:angle="45"/>
        </shape>
    </item>
    
    <!-- Borde brillante -->
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="10dp"/>
            <stroke
                android:width="1.5dp"
                android:color="#80FFFFFF"/>
        </shape>
    </item>
    
    <!-- Efecto de brillo interno -->
    <item android:bottom="4dp" android:top="4dp" android:left="4dp" android:right="4dp">
        <shape android:shape="rectangle">
            <corners android:radius="6dp"/>
            <gradient
                android:startColor="#20FFFFFF"
                android:endColor="#00FFFFFF"
                android:angle="90"/>
        </shape>
    </item>
    
</layer-list>