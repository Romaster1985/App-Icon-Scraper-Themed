<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="8dp"
    android:background="?attr/colorSurface">

    <!-- Bot贸n Filtro TODAS -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/filterAll"
        style="?attr/materialButtonOutlinedStyle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_margin="4dp"
        android:text="@string/filter_all"
        android:textSize="12sp"
        app:strokeColor="?attr/colorOutline"
        app:strokeWidth="1dp"
        app:cornerRadius="8dp" />

    <!-- Bot贸n Filtro SISTEMA -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/filterSystem"
        style="?attr/materialButtonOutlinedStyle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_margin="4dp"
        android:text="@string/filter_system"
        android:textSize="12sp"
        app:strokeColor="?attr/colorOutline"
        app:strokeWidth="1dp"
        app:cornerRadius="8dp" />

    <!-- Bot贸n Filtro USUARIO -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/filterUser"
        style="?attr/materialButtonOutlinedStyle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_margin="4dp"
        android:text="@string/filter_user"
        android:textSize="12sp"
        app:strokeColor="?attr/colorOutline"
        app:strokeWidth="1dp"
        app:cornerRadius="8dp" />

    <!-- Bot贸n Filtro GOOGLE APPS -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/filterGapps"
        style="?attr/materialButtonOutlinedStyle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_margin="4dp"
        android:text="@string/filter_gapps"
        android:textSize="12sp"
        app:strokeColor="?attr/colorOutline"
        app:strokeWidth="1dp"
        app:cornerRadius="8dp" />

</LinearLayout>