<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Título -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Personalizar Iconos"
            android:textSize="20sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginBottom="24dp" />

        <!-- Vista Previa -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Vista Previa"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginBottom="24dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Máscara"
                    android:textSize="14sp"
                    android:layout_marginBottom="4dp" />

                <ImageView
                    android:id="@+id/maskPreview"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:background="@drawable/bg_card"
                    android:scaleType="fitCenter" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Resultado"
                    android:textSize="14sp"
                    android:layout_marginBottom="4dp" />

                <ImageView
                    android:id="@+id/iconPreview"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:background="@drawable/bg_card"
                    android:scaleType="fitCenter" />

            </LinearLayout>

        </LinearLayout>

        <!-- Controles -->
        <Button
            android:id="@+id/selectMaskButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Seleccionar Máscara PNG"
            android:background="@drawable/button_primary"
            android:textColor="@color/white"
            android:layout_marginBottom="12dp" />

        <Button
            android:id="@+id/colorPickerButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Seleccionar Color"
            android:background="@drawable/button_primary"
            android:textColor="@color/white"
            android:layout_marginBottom="24dp" />

        <!-- Posición X -->
        <TextView
            android:id="@+id/xValueText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Posición X: 0"
            android:textSize="14sp"
            android:layout_marginBottom="4dp" />

        <SeekBar
            android:id="@+id/seekBarX"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp" />

        <!-- Posición Y -->
        <TextView
            android:id="@+id/yValueText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Posición Y: 0"
            android:textSize="14sp"
            android:layout_marginBottom="4dp" />

        <SeekBar
            android:id="@+id/seekBarY"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp" />

        <!-- Escala -->
        <TextView
            android:id="@+id/scaleValueText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Escala: 100%"
            android:textSize="14sp"
            android:layout_marginBottom="4dp" />

        <SeekBar
            android:id="@+id/seekBarScale"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp" />

        <!-- Transparencia -->
        <TextView
            android:id="@+id/alphaValueText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Transparencia: 100%"
            android:textSize="14sp"
            android:layout_marginBottom="4dp" />

        <SeekBar
            android:id="@+id/seekBarAlpha"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp" />

        <!-- Intensidad de Color -->
        <TextView
            android:id="@+id/colorIntensityValueText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Intensidad de Color: 100%"
            android:textSize="14sp"
            android:layout_marginBottom="4dp" />

        <SeekBar
            android:id="@+id/seekBarColorIntensity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp" />

        <!-- NUEVOS CONTROLES: AJUSTES DE IMAGEN -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ajustes de Imagen"
            android:textSize="16sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginBottom="16dp" />

        <!-- Tinte -->
        <TextView
            android:id="@+id/hueValueText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tinte: 0°"
            android:textSize="14sp"
            android:layout_marginBottom="4dp" />

        <SeekBar
            android:id="@+id/seekBarHue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp" />

        <!-- Saturación -->
        <TextView
            android:id="@+id/saturationValueText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Saturación: 100%"
            android:textSize="14sp"
            android:layout_marginBottom="4dp" />

        <SeekBar
            android:id="@+id/seekBarSaturation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp" />

        <!-- Brillo -->
        <TextView
            android:id="@+id/brightnessValueText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Brillo: 0%"
            android:textSize="14sp"
            android:layout_marginBottom="4dp" />

        <SeekBar
            android:id="@+id/seekBarBrightness"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp" />

        <!-- Contraste -->
        <TextView
            android:id="@+id/contrastValueText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Contraste: 100%"
            android:textSize="14sp"
            android:layout_marginBottom="4dp" />

        <SeekBar
            android:id="@+id/seekBarContrast"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp" />

        <!-- Progreso -->
        <TextView
            android:id="@+id/progressText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Listo para procesar"
            android:textSize="14sp"
            android:gravity="center"
            android:layout_marginBottom="16dp" />

        <!-- Botones de Acción -->
        <Button
            android:id="@+id/applyButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Aplicar a Todos los Iconos"
            android:background="@drawable/button_primary"
            android:textColor="@color/white"
            android:layout_marginBottom="8dp" />

        <Button
            android:id="@+id/exportButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Exportar Pack de Iconos"
            android:background="@drawable/button_primary"
            android:textColor="@color/white"
            android:enabled="false" />

    </LinearLayout>

</ScrollView>