<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!-- SECCIÓN FIJA - PREVIEW -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:background="@color/white"
        android:elevation="4dp">

        <!-- Título -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/personalize_icons"
            android:textSize="20sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginBottom="16dp" />

        <!-- Vista Previa -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginBottom="16dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/mask"
                    android:textSize="14sp"
                    android:layout_marginBottom="4dp" />

                <ImageView
                    android:id="@+id/maskPreview"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:background="@drawable/bg_card"
                    android:scaleType="fitCenter" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/result"
                    android:textSize="14sp"
                    android:layout_marginBottom="4dp" />

                <ImageView
                    android:id="@+id/iconPreview"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:background="@drawable/bg_card"
                    android:scaleType="fitCenter"
                    android:clickable="true"
                    android:focusable="true" />

            </LinearLayout>

        </LinearLayout>

        <!-- Botones de selección -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2">

            <Button
                android:id="@+id/selectMaskButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginEnd="4dp"
                android:text="@string/select_mask"
                android:background="@drawable/button_primary"
                android:textColor="@color/white"
                android:textSize="12sp" />

            <Button
                android:id="@+id/colorPickerButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="4dp"
                android:text="@string/select_color"
                android:background="@drawable/button_primary"
                android:textColor="@color/white"
                android:textSize="12sp" />

        </LinearLayout>

    </LinearLayout>

    <!-- SECCIÓN DESPLAZABLE - CONTROLES -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Posición X -->
            <TextView
                android:id="@+id/xValueText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/position_x"
                android:textSize="14sp"
                android:layout_marginBottom="4dp" />

            <SeekBar
                android:id="@+id/seekBarX"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp" />

            <!-- Posición Y -->
            <TextView
                android:id="@+id/yValueText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/position_y"
                android:textSize="14sp"
                android:layout_marginBottom="4dp" />

            <SeekBar
                android:id="@+id/seekBarY"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp" />

            <!-- Escala Normal -->
            <TextView
                android:id="@+id/scaleValueText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/scale"
                android:textSize="14sp"
                android:layout_marginBottom="4dp" />
            
            <SeekBar
                android:id="@+id/seekBarScale"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp" />
                
            <!-- Escala Exclusiva para Foreground Pre-procesado -->
            <TextView
                android:id="@+id/foregroundScaleValueText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/foreground_scale"
                android:textSize="14sp"
                android:layout_marginBottom="4dp"
                android:alpha="0.5" />
                        
            <SeekBar
                android:id="@+id/seekBarForegroundScale"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:alpha="0.5"
                android:enabled="false" />

            <!-- Transparencia -->
            <TextView
                android:id="@+id/alphaValueText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/transparency"
                android:textSize="14sp"
                android:layout_marginBottom="4dp" />

            <SeekBar
                android:id="@+id/seekBarAlpha"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp" />

            <!-- Intensidad de Color -->
            <TextView
                android:id="@+id/colorIntensityValueText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/color_intensity"
                android:textSize="14sp"
                android:layout_marginBottom="4dp" />

            <SeekBar
                android:id="@+id/seekBarColorIntensity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp" />

            <!-- Ajustes de Imagen -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/image_adjustments"
                android:textSize="16sp"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_marginBottom="16dp" />

            <!-- Tinte -->
            <TextView
                android:id="@+id/hueValueText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/hue"
                android:textSize="14sp"
                android:layout_marginBottom="4dp" />

            <SeekBar
                android:id="@+id/seekBarHue"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp" />

            <!-- Saturación -->
            <TextView
                android:id="@+id/saturationValueText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/saturation"
                android:textSize="14sp"
                android:layout_marginBottom="4dp" />

            <SeekBar
                android:id="@+id/seekBarSaturation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp" />

            <!-- Brillo -->
            <TextView
                android:id="@+id/brightnessValueText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/brightness"
                android:textSize="14sp"
                android:layout_marginBottom="4dp" />

            <SeekBar
                android:id="@+id/seekBarBrightness"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp" />

            <!-- Contraste -->
            <TextView
                android:id="@+id/contrastValueText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/contrast"
                android:textSize="14sp"
                android:layout_marginBottom="4dp" />

            <SeekBar
                android:id="@+id/seekBarContrast"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp" />

            <!-- Configuración de Capas de Icono -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/icon_layers_config"
                android:textSize="16sp"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_marginBottom="8dp" />

            <CheckBox
                android:id="@+id/useDefaultIconCheckbox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/use_default_icon"
                android:checked="true"
                android:layout_marginBottom="8dp" />

            <CheckBox
                android:id="@+id/useRoundIconCheckbox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/use_round_icon"
                android:checked="false"
                android:layout_marginBottom="8dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2"
                android:layout_marginBottom="8dp">

                <CheckBox
                    android:id="@+id/foregroundLayerCheckbox"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/foreground_layer"
                    android:checked="true" />

                <CheckBox
                    android:id="@+id/backgroundLayerCheckbox"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/background_layer"
                    android:checked="true" />

            </LinearLayout>

            <TextView
                android:id="@+id/layerInfoText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/loading_layer_info"
                android:textSize="12sp"
                android:background="@color/card_background"
                android:padding="8dp"
                android:layout_marginBottom="16dp" />

            <!-- Progreso -->
            <TextView
                android:id="@+id/progressText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/ready_to_process"
                android:textSize="14sp"
                android:gravity="center"
                android:layout_marginBottom="16dp" />

            <!-- Botones de Acción -->
            <Button
                android:id="@+id/applyButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/apply_to_all_icons"
                android:background="@drawable/button_primary"
                android:textColor="@color/white"
                android:layout_marginBottom="8dp" />

            <!-- Botón Previsualizar Todos -->
            <Button
                android:id="@+id/previewAllButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/preview_all"
                android:background="@drawable/bg_card"
                android:textColor="@color/text_secondary"
                android:layout_marginBottom="8dp"
                android:enabled="false" />

            <Button
                android:id="@+id/exportButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/export_icon_pack"
                android:background="@drawable/button_primary"
                android:textColor="@color/white"
                android:enabled="false" />

        </LinearLayout>

    </ScrollView>

</LinearLayout>